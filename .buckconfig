[cxx]
  should_remap_host_platform = true
  untracked_headers = error
  untracked_headers_whitelist = /usr/include/.*, /usr/lib/gcc/.*

[project]
  ignore = .git

[repositories]
  boost.iostreams = buckaroo/official/boost/iostreams
  boost.config = buckaroo/official/boost/config
