  boost.core = buckaroo/official/boost/core
  boost.assert = buckaroo/official/boost/assert
  boost.utility = buckaroo/official/boost/utility
  boost.tuple = buckaroo/official/boost/tuple
  boost.static-assert = buckaroo/official/boost/static-assert
  boost.type-traits = buckaroo/official/boost/type-traits
  boost.mpl = buckaroo/official/boost/mpl
  boost.preprocessor = buckaroo/official/boost/preprocessor
  boost.range = buckaroo/official/boost/range
  boost.iterator = buckaroo/official/boost/iterator
  boost.fusion = buckaroo/official/boost/fusion
  boost.typeof = buckaroo/official/boost/typeof
  boost.function-types = buckaroo/official/boost/function-types
  boost.optional = buckaroo/official/boost/optional
  boost.move = buckaroo/official/boost/move
  boost.concept-check = buckaroo/official/boost/concept-check
  boost.regex = buckaroo/official/boost/regex
  boost.predef = buckaroo/official/boost/predef
  boost.smart-ptr = buckaroo/official/boost/smart-ptr
